@model OrderDto

@{
	ViewData["Title"] = "Details";
}

<form method="post">
	<input asp-for="@Model.OrderHeaderDto.Id" hidden />
	<br />
	<div class="container">
		<div class="card p-1">
			<div class="card-header text-bg-dark mt-1 mx-2">
				<div class="row">
					<div class="col-6 col-md-6 py-2">
						 Order Summary
					</div>
					<div class="col-6 my-auto text-end">
						<a asp-action="Index" class="btn btn-outline-info form-control w-50 btn-sm">Back to Orders</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-primary">PickUp Details</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">Name</div>
								<div class="col-9">
									@if (User.IsInRole(Constants.RoleAdmin) || User.IsInRole(Constants.RoleEmployee))
									{
										<input asp-for="@Model.OrderHeaderDto.Name" type="text" class="form-control" />
										<span asp-validation-for="@Model.OrderHeaderDto.Name" class="text-danger"></span>
									}
									else
									{
										<input asp-for="@Model.OrderHeaderDto.Name" readonly type="text" class="form-control" />
									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Phone</div>
								<div class="col-9">
									@if (User.IsInRole(Constants.RoleAdmin) || User.IsInRole(Constants.RoleEmployee))
									{
										<input asp-for="@Model.OrderHeaderDto.PhoneNumber" type="text" class="form-control" />
										<span asp-validation-for="@Model.OrderHeaderDto.PhoneNumber" class="text-danger"></span>
									}
									else
									{
										<input asp-for="@Model.OrderHeaderDto.PhoneNumber" readonly type="text" class="form-control" />
									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Address</div>
								<div class="col-9">
									@if (User.IsInRole(Constants.RoleAdmin) || User.IsInRole(Constants.RoleEmployee))
									{
										<input asp-for="@Model.OrderHeaderDto.StreetAddress" type="text" class="form-control" />
										<span asp-validation-for="@Model.OrderHeaderDto.StreetAddress" class="text-danger"></span>
									}
									else
									{
										<input asp-for="@Model.OrderHeaderDto.StreetAddress" readonly type="text" class="form-control" />
									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">City</div>
								<div class="col-9">
									@if (User.IsInRole(Constants.RoleAdmin) || User.IsInRole(Constants.RoleEmployee))
									{
										<input asp-for="@Model.OrderHeaderDto.City" type="text" class="form-control" />
										<span asp-validation-for="@Model.OrderHeaderDto.City" class="text-danger"></span>
									}
									else
									{
										<input asp-for="@Model.OrderHeaderDto.City" readonly type="text" class="form-control" />
									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">State</div>
								<div class="col-9">
									@if (User.IsInRole(Constants.RoleAdmin) || User.IsInRole(Constants.RoleEmployee))
									{
										<input asp-for="@Model.OrderHeaderDto.State" type="text" class="form-control" />
										<span asp-validation-for="@Model.OrderHeaderDto.State" class="text-danger"></span>
									}
									else
									{
										<input asp-for="@Model.OrderHeaderDto.State" readonly type="text" class="form-control" />
									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Zip Code</div>
								<div class="col-9">
									@if (User.IsInRole(Constants.RoleAdmin) || User.IsInRole(Constants.RoleEmployee))
									{
										<input asp-for="@Model.OrderHeaderDto.PostalCode" type="text" class="form-control" />
										<span asp-validation-for="@Model.OrderHeaderDto.PostalCode" class="text-danger"></span>
									}
									else
									{
										<input asp-for="@Model.OrderHeaderDto.PostalCode" readonly type="text" class="form-control" />
									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Email</div>
								<div class="col-9">
									<input asp-for="@Model.OrderHeaderDto.ApplicationUserDto.Email" readonly type="text" class="form-control" />
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Order Date</div>
								<div class="col-9">

									<input value="@Model.OrderHeaderDto.OrderDate.ToShortDateString()" readonly type="text" class="form-control" />

								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Carrier</div>
								<div class="col-9">
									@if (User.IsInRole(Constants.RoleAdmin) || User.IsInRole(Constants.RoleEmployee))
									{
										<input asp-for="@Model.OrderHeaderDto.Carrier" id="carrier" type="text" class="form-control" />
									}
									else
									{
										<input asp-for="@Model.OrderHeaderDto.Carrier" readonly type="text" class="form-control" />
									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Tracking</div>
								<div class="col-9">
									@if (User.IsInRole(Constants.RoleAdmin) || User.IsInRole(Constants.RoleEmployee))
									{
										<input asp-for="@Model.OrderHeaderDto.TrackingNumber" id="trackingNumber" type="text" class="form-control" />
									}
									else
									{
										<input asp-for="@Model.OrderHeaderDto.TrackingNumber" readonly type="text" class="form-control" />
									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Shipping Date</div>
								<div class="col-9">
									<input value="@Model.OrderHeaderDto.ShippingDate.ToShortDateString()" type="text" readonly class="form-control" />
								</div>
							</div>
							@if (User.IsInRole(Constants.RoleAdmin) || User.IsInRole(Constants.RoleEmployee))
							{
								<div class="row my-1">
									<div class="col-3">Session ID</div>
									<div class="col-9">
										<input asp-for="@Model.OrderHeaderDto.SessionId" type="text" readonly class="form-control" />
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">Payment Intent ID</div>
									<div class="col-9">
										<input asp-for="@Model.OrderHeaderDto.PaymentIntendId" type="text" readonly class="form-control" />
									</div>
								</div>
							}
							<div class="row my-1">
								<div class="col-3">Payment Date</div>
								<div class="col-9">
									<input value="@Model.OrderHeaderDto.PaymentDate.ToShortDateString()"
										readonly id="paymentDate" type="text" class="form-control" />
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Payment Status</div>
								<div class="col-9">
									<input asp-for="@Model.OrderHeaderDto.PaymentStatus" type="text" readonly class="form-control" />
								</div>
							</div>
							<input type="submit" asp-action="UpdateOrderDetail" class="btn btn-warning form-control mt-3" value="Update Order Details" />

						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-primary">Order Summary</span>
							</h4>
							<label class="btn btn-outline-primary form-control my-2">Order Status - @Model.OrderHeaderDto.OrderStatus</label>

							<ul class="list-group mb-3">
								@foreach (var detail in Model.OrderDetailDtos)
								{
									<li class="list-group-item d-flex justify-content-between p-2">
										<div class="row container">
											<div class="col-8">
												<h6 class="my-0 text-primary">@detail.ProductDto.Name</h6>
												<small class="text-muted">Quantity : @detail.Count x&nbsp;</small>
												<small class="text-muted">@detail.ProductDto.GetPackagingTypeWithQuantityUnit()</small>
											</div>
											<div class="col-4 text-end">
												<p class="text-success">@detail.Price.ToString("c")</p>
											</div>
										</div>
									</li>
								}
								<li class="list-group-item bg-info">
									<div class="row container">
										<div class="col-6">
											<h5 class="text-white">TOTAL </h5>
										</div>
										<div class="col-6 text-end">
											<h5 class="text-white">@Model.OrderHeaderDto.OrderTotal.ToString("c")</h5>
										</div>
									</div>
								</li>
							</ul>
							@if (User.IsInRole(Constants.RoleAdmin) || User.IsInRole(Constants.RoleEmployee))
							{
								if (Model.OrderHeaderDto.OrderStatus == Constants.StatusApproved)
								{
									<input type="submit" asp-action="StartProcessing" class="btn btn-primary form-control my-1" value="Start Processing" />
								}
								if (Model.OrderHeaderDto.OrderStatus == Constants.StatusInProcess)
								{
									<input type="submit" onclick="return validateInput()"
								   asp-action="ShipOrder" class="btn btn-primary form-control my-1" value="Ship Order" />
								}

								@if (Model.OrderHeaderDto.OrderStatus != Constants.StatusRefunded &&
										Model.OrderHeaderDto.OrderStatus != Constants.StatusCancelled &&
										Model.OrderHeaderDto.OrderStatus != Constants.StatusShipped)
								{
									<input type="submit" asp-action="CancelOrder" class="btn btn-danger form-control my-1" value="Cancel Order" />
								}
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
	<script>
		function validateInput() {
			if (document.getElementById("trackingNumber").value == "") {
				Swal.fire({
					icon: 'error',
					title: 'Oops...',
					text: 'Please enter tracking number!',
				});
				return false;
			}
			if (document.getElementById("carrier").value == "") {
				Swal.fire({
					icon: 'error',
					title: 'Oops...',
					text: 'Please enter carrier!',
				});
				return false;
			}
			return true;
		}
	</script>

}