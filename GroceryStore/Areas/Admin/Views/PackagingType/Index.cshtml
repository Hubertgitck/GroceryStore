@model IEnumerable<PackagingTypeDto>

@{
    ViewData["Title"] = "Index";
}

        <div class="container p-3">
            <div class="row pt-4">
                <div class="col-6 mb-4">
                    <h2 class="text-primary"> PackagingType List</h2>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="PackagingType" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> &nbsp; Create New Packaging Type
                    </a>
                </div>
            </div>
        </div>


<div class="container-fluid">
    <div class="row col-md-6 mx-auto">
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        PackagingType Name
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        Unit
                    </th>
                    <th>
                    </th>
                </tr>
        
            </thead>    
            <tbody>
                @foreach(var obj in Model)
                {
            
                    <tr>
                        <td class="col-md-8">
                            @obj.Name
                        </td>
                        <td>
                            @obj.Weight
                        </td>
                        <td class="col-md-1">
                            @if (obj.IsWeightInGrams)
                            {
                                <p>[g]</p>
                            }
                            else
                            {
                                <p>[kg]</p>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="PackagingType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 px-4">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit
                                </a>
                                <a asp-controller="PackagingType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-secondary mx-2">
                                    <i class="bi bi-trash3"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>