@model Application.Models.ViewModels.ShoppingCartViewModel

<form method="post">
	<br />
	<div class="container ">
		<div class="card p-1 ">
			<div class="card-header text-bg-dark text-light ms-0">
				<div class="row">
					<div class="col-6 py-2">
						<i class="bi bi-cart"></i> &nbsp;
						Shopping Cart
					</div>
					<div class="col-6 my-auto text-end">
						<a asp-area="Customer" asp-controller="Shop" asp-action="Index" class="btn btn-outline-info btn-sm">Continue Shopping</a>
					</div>
				</div>
			</div>

			<div class="card-body">
				@foreach(var item in Model.CartList){
				<div class="row">
					<div class="d-none d-lg-block col-lg-1 text-center py-2">
						<img src="@item.Product.ImageUrl" class="rounded" width="100%" />
					</div>
					<div class="col-12 col-lg-6 pt-md-3">
							<h5><strong>@item.Product.Name</strong></h5>
						<p><small>@item.Product.Description</small></p>
					</div>
						<div class="col-12  col-lg-5 text-center row my-auto">
						<div class="col-5 text-md-right pt-3">
								<h6><strong>@item.Product.Price.ToString("c")&nbsp;x&nbsp;@item.Count </strong></h6>
						</div>
						<div class="col-4 col-sm-3 col-lg-6 pt-2 my-auto">
							<div class="w-75 btn-group" role="group">
								<a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-primary">
									<i class="bi bi-plus-square"></i>
								</a> &nbsp;
								<a asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-warning">
									<i class="bi bi-dash-square"></i>
								</a>
							</div>

						</div>
							<div class="col-3 col-sm-4 col-lg-1 text-right pt-2 my-auto">
								<a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger">
								<i class="bi bi-trash-fill"></i>
							</a>
						</div>
					</div>
				</div>
				<hr />
				}
				<div class="row">
					<div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
						<ul class="list-group">
							<li class="list-group-item d-flex justify-content-between bg-light">
								<span class="text-info"> Total (USD)</span>
								<strong class="text-info">@Model.OrderHeader.OrderTotal.ToString("c")</strong>
							</li>
						</ul>
					</div>
				</div>

			</div>

			<div class="card-footer">
				<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
					<a asp-action="Summary" class="btn btn-success form-control">Summary</a>
				</div>
			</div>
		</div>
	</div>
</form>
