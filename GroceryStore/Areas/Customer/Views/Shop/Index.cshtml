@model IEnumerable<Application.Models.ViewModels.ProductViewModel>

<div class="row py-5 px-5 ">
    @foreach (var productVM in Model)
    {
        <div class="col-xl-3 col-md-6 col-sm-8">
            <div class="row p-2">
                <div class="col-12 pb-1">
                        <div class="card pb-1">
                            <img src="@productVM.Product.ImageUrl" class="card-img-top pt-1 mx-auto rounded" />
                        <div class="card-body">
                            <div >
                                <p class="card-title h5 text-primary">@productVM.Product.Name</p>
                            </div>
                            <div >
                                <p class="card-text">Price:<b>$@productVM.Product.Price.ToString("0.00")</b>
                                    for @productVM.GetProductNameWithPackagingType()</p>
                            </div>
                            <div>
                                <p style="font-size:10px">Price for 1kg: @productVM.GetPriceFor1kg().ToString("0.00")$</p>
                            </div>
                        </div>
                        <div class="mx-auto">
                            <a asp-action="Details" class="btn btn-primary form-control" 
                                asp-route-productId="@productVM.Product.Id">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>